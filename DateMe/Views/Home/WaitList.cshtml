@{
}

@model List<ApplicationViewModel>

<table>
    <thead class="fw-bold">
        <tr>
            <td>First Name</td>
	        <td>Last Name</td>
            <td>Age</td>
            <td>Phone</td>
            <td>Occupation</td>
            <td>Major</td>
            <td>Creeper and/or Stalker</td>
        </tr>
    </thead>

    @foreach (var x in Model)
    {
        <tbody>
            <tr>
				<td>@x.ApplicationID</td>
                <td>@x.FirstName</td>
                <td>@x.LastName</td>
                <td>@x.Age</td>
                <td>@x.PhoneNumber</td>
		        <td>@x.Occupation</td>
                <td>@x.Major.MajorName</td>
                <td>@x.CreeperStalker</td>

                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.ApplicationID">Edit</a></td>
				<td><a class="btn btn-danger">Delete</a></td>
            </tr>
        </tbody>
    }
</table>